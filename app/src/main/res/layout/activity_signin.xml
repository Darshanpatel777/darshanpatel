<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.SignIn">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textColor="#000000"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your credential for login"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        app:boxStrokeColor="#09EF12"
        android:textColorHint="@color/black"
        android:layout_marginTop="100dp"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp"
        app:startIconDrawable="@drawable/user"
        app:boxCornerRadiusBottomStart="20sp"
        app:boxCornerRadiusTopEnd="20sp"
        app:boxStrokeWidth="2dp"
        app:endIconMode="none"
        app:boxCornerRadiusTopStart="20sp"
        app:boxCornerRadiusBottomEnd="20sp">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        app:boxStrokeColor="#09EF12"
        android:textColorHint="@color/black"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/padlock"
        app:boxCornerRadiusBottomStart="20sp"
        app:boxCornerRadiusTopEnd="20sp"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="20sp"
        app:boxCornerRadiusBottomEnd="20sp">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:backgroundTint="#DE4616"
        android:text="Login Now"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"/>

    <TextView
        android:id="@+id/signup"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3855F8"
        android:text="Create Account.."
        android:textSize="20sp"/>












</LinearLayout>